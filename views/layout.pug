doctype html
html
  head
    title Knowledgebase
    link(rel='stylesheet' href='/assets/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet' href='/css/style.css')
  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      .container
        a.navbar-brand(href=user ? '/tasks' : '/') TM
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
          ul.navbar-nav.me-auto.mb-2.mb-lg-0
            li.nav-item
              a.nav-link(href=user ? '/tasks' : '/') Home
            if user
              li.nav-item
                a.nav-link(href='/tasks/new') Add Task
          .d-flex
            ul.navbar-nav
              if user
                li 
                  a.nav-link(href='/users/logout') Logout
              else
                li
                  a.nav-link(href='/users/register') Register
                li
                  a.nav-link(href='/users/login') Login

    .container
      != messages('message', locals)
      if errors
        each error, i in errors
          div(class="alert alert-danger") #{error.msg}
      block content
      
      
    script(src='/assets/jquery/dist/jquery.js')  
    script(src='/assets/bootstrap/dist/js/bootstrap.js')
    script(src='/js/main.js')  
